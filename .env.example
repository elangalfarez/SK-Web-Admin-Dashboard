# .env.example
# Created: Environment variables template for Supermal Karawaci Admin Dashboard

# =============================================================================
# SUPABASE CONFIGURATION
# Get these from your Supabase project settings â†’ API
# =============================================================================

# Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anon/public key (safe to expose in client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (NEVER expose to client - server-only)
# Used for admin operations that bypass RLS
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Public URL of your app (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# App name for display
NEXT_PUBLIC_APP_NAME=Supermal Karawaci Admin

# =============================================================================
# OPTIONAL: AUTHENTICATION
# =============================================================================

# Site URL for auth redirects (same as APP_URL in most cases)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable debug logging (set to 'true' in development)
# NEXT_PUBLIC_DEBUG=true
